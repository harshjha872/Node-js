<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/stlye.css" />

    <%- include('non-repeating-templates/navbar.ejs'),{activeClass: activeClass,route:route,isloggedIn:isloggedIn} %>
    
    <main>
      <div class="container">
        <div class="ui four column centered grid">
          <% if(ListOfproducts) { %>
            <% ListOfproducts.forEach(ele => { %>
              <div class="column">
                <div class="ui centered card">
                  <div class="image">
                    <img src="<%= ele.CartProduct.imageUrl %>" />
                  </div>
                  <div class="content">
                    <a href="/product/<%= ele.CartProduct._id %>" class="header"><%= ele.CartProduct.title %></a>
                    <div class="description">
                      <%= ele.CartProduct.discription %>
                    </div>
                  </div>
                  <div class="extra content">
                    <div class="header"><%= ele.CartProduct.price %> $</div>
                    <div class="header">Quantity: <%= ele.quantity %></div>
                  </div>
                  <div class="extra content">
                    <a href="/product/<%= ele.CartProduct._id %>"><button class="ui secondary button">Details</button></a>
                    

                  </div>
                  <div class="extra content">
                    <form action="/deleteproductcart" method="POST">
                      <button class="ui inverted red button">Delete</button>
                      <input type="hidden" name="deleteProductfromcart" value="<%= ele.id %>">
                    </form>

                    
                  </div>
                </div>
    
              </div>
              <% }) %>
          <% } %>    
        </div>
      </div>
    </main>
  </body>
</html>